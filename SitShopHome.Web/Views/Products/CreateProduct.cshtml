@using Shared.DataTransferObjects;
@model ProductViewModel
@{
    ViewData["Title"] = "Create a product";
    var productCategories = ViewData["ProductCategories"] as IEnumerable<ProductCategoryDTO>;
}

<h1>@ViewData["Title"]</h1>


<form method="post" enctype="multipart/form-data">
<div class="CreateProductPanel">
    <div class="ProductBlock">
        <label >Title</label>
        <input type = "text" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
     <div class="ProductBlock">
        <label >Desctiption</label>
        <input type = "text" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="ProductBlock">
        <label >Category: </label>
        <select asp-for="CategoryId">
        @foreach(var item in productCategories)
        {
            <option value="@item.ProductCategoryId">@item.ProductCategoriesTitle</option>
        }
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div class="ProductBlock">
        <lable>Picture: </lable>
        <input type="file" asp-for="File"multiple accept="image/*"/>
        <span asp-validation-for="File"></span>
    </div> 
    <div class="ProductBlock">
        <label >Price: </label>
        <input type="number" min="1" max="100000" asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>
 
    <span>@ViewBag.SomethingWrong</span>
    <button type="submit" class="btn btn-primary">Save</button> 
<
</div>
</form>
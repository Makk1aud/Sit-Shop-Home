@model Shared.DataTransferObjects.ProductDTO

@{
    ViewData["Title"] = $"This is {@Model.ProductTitle}";
}

<h1>@ViewData["Title"]</h1>

<div class="ProductCard">
    <div class="ProductPhoto">
        <img src="~/@Model.ProductImage" class="ProductPhotoInPage"> 
    </div>
    <div class="ProductInfo">
        <p>Название: @Model.ProductTitle</p>
        <p>@Model.ProductDescription</p>
        <p>Cost: @Model.ProductPrice rub</p>
    </div>
</div>

<style>
    .ProductCard ProductPhoto ProductInfo{
        display:block;
        margin-left:auto;
        margin-right:auto;
        width:80%;
        justify-content: space-between;
    }
    .ProductPhoto{
        float:left;
        width:70%;
        height: auto;
    }

    .ProductInfo{
        float:right;
        width:30%;
        height: auto;
    }

    .ProductPhotoInPage{
        max-width: 50%;
        max-height: 50%;
    }
</style>